{
  "flex-layout.row#departaments-grid": {
    "title": "Sessão de Departamentos",
    "children": [
      "rich-text#departaments-grid-title",
      "slider-layout#departaments-grid"
    ],
    "props": {
      "blockClass": "departaments-container"
    }
  },

  "rich-text#departaments-grid-title": {
    "title": "Título",
    "props": {
      "blockClass": "departaments-wrapper__title",
      "text": "Conheça nossas coleções"
    }
  },

  "slider-layout#departaments-grid": {
    "title": "Carrossel",
    "children": [
      "flex-layout.row#departament-container-banner-1",
      "flex-layout.row#departament-container-banner-2",
      "flex-layout.row#departament-container-banner-3"
    ],
    "props": {
      "blockClass": "departaments-container__slider",
      "itemsPerPage": {
        "desktop": 3,
        "tablet": 2,
        "phone": 1
      },
      "infinite": true
    }
  },

  "flex-layout.row#departament-container-banner-1": {
    "title": "Departamento - 1",
    "children": [
      "image#departament-container-banner-1",
