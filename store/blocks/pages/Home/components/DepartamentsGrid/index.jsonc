    ],
    "props": {
      "blockClass": "departaments-container__wrapper"
    }
  },

  "image#departament-container-banner-1": {
    "title": "Imagem",
    "props": {
      "blockClass": "departaments-container__image",
      "src": "",
      "title": "Imagem do Departamento",
      "alt": "Imagem do Departamento"
    }
  },

  "rich-text#departament-container-banner-1-title": {
    "title": "Título",
    "props": {
      "blockClass": "departaments-container__title",
      "text": "Cama",
      "textAlignment": "CENTER"
    }
  },

  "link#departament-container-cta": {
    "title": "Botão Principal",
